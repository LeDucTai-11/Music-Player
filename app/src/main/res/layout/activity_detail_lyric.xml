<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailLyricActivity">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@drawable/gredient_bg"
      android:id="@+id/layout_top_btn"
      android:layout_alignParentTop="true">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_chevron_left_24"
        android:layout_alignParentStart="true"
        android:id="@+id/back_btn"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Now Playing"
        android:textColor="@color/white"
        android:layout_toEndOf="@+id/back_btn"
        android:layout_toStartOf="@+id/menu_btn"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/menu_btn"
        android:src="@drawable/ic_baseline_more_vert_24"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>
  </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginTop="30dp"
      android:id="@+id/my_song"
      android:layout_below="@+id/layout_top_btn">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Ánh nắng của anh"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        android:layout_marginLeft="20dp"
        android:gravity="left"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="32dp"
        android:src="@drawable/ic_baseline_queue_music_24"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="64dp"
        android:src="@drawable/ic_baseline_playlist_add_24"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="96dp"
        android:src="@drawable/heart"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

  </RelativeLayout>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:background="@android:color/transparent"
      android:gravity="left"
      android:layout_below="@+id/my_song"
      android:text="Đức Phúc"
      android:textColor="@color/white"
      android:textSize="25sp"
      android:textStyle="bold" />

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:layout_below="@+id/my_song">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Từ bao lâu nay\n
        Bao lâu rồi ai đâu hay\n
        Ngày cứ thế trôi qua miên man\n
Riêng anh một mình nơi đây\n
Những phút giây trôi qua tầm tay\n
Chờ một ai đó đến bên anh\n
Lặng nghe những tâm tư này"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        android:gravity="center"/>

  </RelativeLayout>



  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_marginBottom="30dp"
      android:layout_alignParentBottom="true"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_baseline_shuffle_24"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_baseline_skip_previous_24"
        android:layout_toStartOf="@+id/play_pause"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_pause"
        android:src="@drawable/ic_baseline_play_arrow_24"
        android:background="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:focusable="true"
        android:clickable="true"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_baseline_skip_next_24"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/play_pause"
        android:layout_marginStart="16dp"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_baseline_repeat_24"
        android:layout_toStartOf="@+id/play_pause"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"/>

  </RelativeLayout>

  </RelativeLayout>